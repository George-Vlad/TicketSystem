@using GeorgeVlad.TicketingSystem.Web.Startup
@{
    ViewBag.Title = L("HomePage");
    ViewBag.CurrentPageName = PageNames.Home;
}

@section scripts
{
    <environment names="Development">
        <script src="~/libs/chartjs/dist/Chart.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Home/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/_Bundles/home-index.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">@L("HomePage")</h1>
            </div>
        </div>
    </div>
</div>
<section class="content mt-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-2">
                                <h5 class="card-title">@L("Tickets")</h5>
                            </div>
                            <div class="col-10 d-flex justify-content-end">
                                <a href="javascript:;" id="AddTicket" data-toggle="modal" data-target="#TicketCreateModal" type="button" class="btn btn-outline-success">
                                    <i class="fas fa-plus"></i> @L("AddTicket")
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" style="overflow: visible;">
                            <table id="TicketsTable" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th class="text-center">@L("Subject")</th>
                                    <th class="text-center">@L("TicketType")</th>
                                    <th class="text-center">@L("CustomerName")</th>
                                    <th class="text-center">@L("ServiceType")</th>
                                    <th class="text-center">@L("Status")</th>
                                    <th class="text-center" style="width: 270px;">@L("Actions")</th>
                                </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@await Html.PartialAsync("~/Views/Home/_CreateTicketModal.cshtml")

<div class="modal fade" id="TicketEditModal" tabindex="-1" role="dialog" aria-labelledby="EditTickeModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>